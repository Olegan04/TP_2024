<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rating.RatingFragment"
    android:layout_marginTop="@dimen/fragment_top_margin">


    <EditText
        android:id="@+id/idEditUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Введите имя"
        android:inputType="text" />
    <EditText
        android:id="@+id/idEditPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/idEditUserName"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Введите пароль"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/idBtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердить"
        app:layout_constraintTop_toBottomOf="@+id/idEditPassword"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>