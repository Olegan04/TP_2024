<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile.ProfileFragment"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/editProfileImageBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignTop="@+id/profileImage"
                    android:layout_alignEnd="@+id/profileImage"
                    android:layout_margin="8dp"
                    android:background="?android:attr/panelBackground"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintRight_toRightOf="@+id/profileImage"
                    app:layout_constraintTop_toTopOf="@+id/profileImage" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="236dp"
                    android:layout_height="236dp"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="@dimen/activity_vertical_margin_medium"
                    android:contentDescription="TODO" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center">
                <EditText
                    android:id="@+id/profileName"
                    android:text="User_name"
                    android:textAlignment="center"
                    android:layout_width="235dp"
                    android:minHeight="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_vertical_margin_medium"
                    app:layout_constraintTop_toBottomOf="@+id/profileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/editProfileBtn" />

                <ImageButton
                    android:id="@+id/editProfileBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="@dimen/activity_vertical_margin_medium"
                    android:background="?android:attr/panelBackground"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="@+id/profileName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profileName"
                    app:layout_constraintTop_toTopOf="@+id/profileName" />
            </LinearLayout>
            <EditText
                android:id="@+id/profileAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="72dp"
                android:layout_marginVertical="@dimen/activity_vertical_margin_small"
                android:text="UserName"
                app:layout_constraintTop_toBottomOf="@+id/profileName" />
            <EditText
                android:id="@+id/profileSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="72dp"
                android:layout_marginVertical="@dimen/activity_vertical_margin_small"
                app:layout_constraintTop_toBottomOf="@+id/profileAge"/>
            <EditText
                android:id="@+id/profileLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="72dp"
                android:layout_marginVertical="@dimen/activity_vertical_margin_small"
                app:layout_constraintTop_toBottomOf="@+id/profileSex"/>

        </LinearLayout>
    </ScrollView >