<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/image_profile_setting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="TODO"
        app:layout_constraintTop_toTopOf="@+id/image_profile"
        app:layout_constraintRight_toRightOf="@+id/image_profile" />

    <TextView
        android:id="@+id/profile_name"
        android:text="Hi"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toEndOf="@+id/profile_name"
        app:layout_constraintBottom_toBottomOf="@id/profile_name"
        app:layout_constraintTop_toTopOf="@id/profile_name" />

    <TextView
        android:id="@+id/profile_age"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        app:layout_constraintStart_toStartOf="@+id/image_profile" />
    <TextView
        android:id="@+id/profile_sex"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_age"
        app:layout_constraintStart_toStartOf="@+id/image_profile" />
    <TextView
        android:id="@+id/profile_location"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_sex"
        app:layout_constraintStart_toStartOf="@+id/image_profile" />
    <TextView
        android:id="@+id/profile_description"
        android:layout_width="100dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_location"
        app:layout_constraintStart_toStartOf="@+id/image_profile" />
    <ListView
        android:id="@+id/list_profile_links"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_description"
        app:layout_constraintStart_toStartOf="@+id/image_profile"
        />
</androidx.constraintlayout.widget.ConstraintLayout>